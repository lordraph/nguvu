<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".QuestionEight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel_button"
                android:layout_marginLeft="10dp"
                android:background="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/josefin_sans_bold"
                android:text="Assessment"
                android:textColor="#00372A"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:text="8 of 11"
            android:textColor="#909090" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:lineHeight="25dp"
            android:text="Rate your finances"
            android:textColor="#00372A"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefin_sans"
            android:text="Rate how you feel"
            android:textColor="#909090"
            android:textSize="15sp" />


        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/justThere"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:background="@drawable/justthere_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:fontFamily="@font/josefin_sans_bold"
                android:gravity="center"
                android:text="Just there"
                android:textSize="10sp"
                android:drawableLeft="@drawable/justthere"
                android:textAllCaps="false"
                android:textColor="@color/justthere" />


            <RadioButton
                android:id="@+id/between"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:background="@drawable/inbetween_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:textSize="10sp"
                android:fontFamily="@font/josefin_sans_bold"
                android:gravity="center"
                android:text="In-between"
                android:drawableLeft="@drawable/inbetween"
                android:textAllCaps="false"
                android:textColor="@color/inbetwen" />

            <RadioButton
                android:id="@+id/amazing"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:textSize="10sp"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:fontFamily="@font/josefin_sans_bold"
                android:gravity="center"
                android:text="Amazing"
                android:drawableLeft="@drawable/happy"
                android:textAllCaps="false"
                android:textColor="@color/amazing" />

        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:onClick="goBack"
                android:text="Previous"
                android:textColor="#909090"
                android:textSize="15sp" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="172dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_green"
                android:fontFamily="@font/josefin_sans_bold"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>